<configuration>
    <appender name="E_AND_E_LOG_FILE" class="ch.qos.logback.core.FileAppender">
        <file>C:/evaluation-logs/entry_exit_controller.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.web.back.controllers.EntryAndExitController" level="INFO" additivity="false">
        <appender-ref ref="E_AND_E_LOG_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
